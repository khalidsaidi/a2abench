{
  "hosting": [
    {
      "target": "api",
      "public": "docs/hosting/api",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "redirects": [
        {
          "source": "/",
          "destination": "/docs",
          "type": 302
        }
      ],
      "rewrites": [
        {
          "source": "/api/**",
          "run": {
            "serviceId": "a2abench-api",
            "region": "us-central1"
          }
        },
        {
          "source": "/docs{,/**}",
          "run": {
            "serviceId": "a2abench-api",
            "region": "us-central1"
          }
        },
        {
          "source": "/.well-known/**",
          "run": {
            "serviceId": "a2abench-api",
            "region": "us-central1"
          }
        },
        {
          "source": "/robots.txt",
          "run": {
            "serviceId": "a2abench-api",
            "region": "us-central1"
          }
        },
        {
          "source": "/sitemap.xml",
          "run": {
            "serviceId": "a2abench-api",
            "region": "us-central1"
          }
        },
        {
          "source": "/admin/**",
          "run": {
            "serviceId": "a2abench-api",
            "region": "us-central1"
          }
        },
        {
          "source": "/q/**",
          "run": {
            "serviceId": "a2abench-api",
            "region": "us-central1"
          }
        }
      ]
    },
    {
      "target": "mcp",
      "public": "docs/hosting/mcp",
      "cleanUrls": true,
      "ignore": [
        "firebase.json",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "/healthz{,/**}",
          "headers": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ]
        }
      ],
      "redirects": [
        {
          "source": "/",
          "destination": "/mcp",
          "type": 301
        },
        {
          "source": "/mcp",
          "destination": "https://a2abench-mcp-remote-405318049509.us-central1.run.app/mcp",
          "type": 301
        },
        {
          "source": "/mcp/**",
          "destination": "https://a2abench-mcp-remote-405318049509.us-central1.run.app/mcp",
          "type": 301
        },
        {
          "source": "/healthz",
          "destination": "https://a2abench-mcp-remote-405318049509.us-central1.run.app/healthz/",
          "type": 301
        }
      ]
    }
  ]
}
